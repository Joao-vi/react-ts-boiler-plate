{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES5",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["jest", "node"],
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist"]
}
