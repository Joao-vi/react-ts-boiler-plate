{
  "name": "react-typescript-jest-boilerplate",
  "version": "1.4.0",
  "description": "Boilerplate for React app with Typescript and Jest lib",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --open --hot --config ./webpack.dev.js",
    "build": "webpack --mode production --config ./webpack.prod.js",
    "lint": "eslint ./src/**/*",
    "lint:fix": "yarn lint --fix",
    "test": "yarn jest --",
    "test:watch": "yarn jest --watch",
    "test:coverage": "yarn jest --coverage",
    "test:staged": "yarn jest --findRelatedTests --passWithNoTests",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint:fix",
      "yarn test:staged",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "29.4.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/react-router-dom": "5.3.3",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "5.50.0",
    "css-loader": "6.7.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "lint-staged": "^13.1.2",
    "mini-css-extract-plugin": "2.7.2",
    "prettier": "2.8.3",
    "sass": "1.58.0",
    "sass-loader": "13.2.0",
    "source-map-loader": "4.0.1",
    "style-loader": "3.3.1",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.8.0"
  }
}
